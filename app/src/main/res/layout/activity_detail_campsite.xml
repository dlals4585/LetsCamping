<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailCampsiteActivity">

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <fragment
                android:id="@+id/camping_carousel_fragment"
                class="com.letscamping.CampingImgCarouselFragment"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="250dp"
                android:layout_gravity="center|top"/>
            <!--<fragment
                android:id="@+id/camping_carousel_fragment"
                android:name="com.letscamping.CampingImgCarouselFragment"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="250dp"
                android:layout_gravity="center|top"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/facltNm"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="야영장 명"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="30sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/addr"
                        android:layout_weight="9"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10sp"
                        android:layout_marginBottom="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="주소"
                        android:textSize="18sp"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:id="@+id/gomap"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="지도보기>"
                        android:textColor="@color/blue"
                        android:textSize="18sp"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginStart="10sp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="설명"/>
                <TextView
                    android:id="@+id/lineIntro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginBottom="15sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginStart="10sp"
                    android:text="없음"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginStart="10sp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="편의시설 및 서비스"/>
                <TextView
                    android:id="@+id/sbrsCl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginBottom="15sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginStart="10sp"
                    android:text="없음"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginStart="10sp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="캠핑 서비스"/>
                <TextView
                    android:id="@+id/eqpmnLendCl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginBottom="15sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginStart="10sp"
                    android:text="없음"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginStart="10sp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="주변 이용 가능시설"/>
                <TextView
                    android:id="@+id/posblFcltyCl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginBottom="15sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginStart="10sp"
                    android:text="없음"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="예약하기"
            android:textSize="20sp"
            android:id="@+id/payment"/>
    </LinearLayout>
</LinearLayout>