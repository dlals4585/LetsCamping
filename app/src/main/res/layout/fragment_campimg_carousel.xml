<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    tools:context=".CampingImgCarouselFragment"
    android:id="@+id/carousel_layout">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager_banner1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center|top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/linear_layout_see_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="25dp"
        app:layout_constraintRight_toRightOf="@+id/viewPager_banner1"
        app:layout_constraintBottom_toBottomOf="@+id/viewPager_banner1"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="16dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:background="@drawable/carousel_gray">

        <TextView
            android:id="@+id/textView_current_banner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="15dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="/"
            android:textSize="15dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView_total_banner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#FFFFFF" />

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="모두보기"
            android:textSize="15dp"
            android:textColor="#FFFFFF" />-->
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>