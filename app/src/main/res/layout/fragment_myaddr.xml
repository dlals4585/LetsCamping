<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <View
        android:layout_width="0dp"
        android:layout_height="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/myAddress_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/getAdderss_fail"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="30sp"/>

        <View android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_weight="0.7"/>

        <TextView
            android:id="@+id/openMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_weight="0.2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="지도보기"
            android:textColor="#AFA75C"
            android:textStyle="normal"
            android:textSize="20sp"/>

        <View android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_weight="0.1"/>

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/selectdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/firstday"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="left|center"
                android:text="MM.DD 요일"
                android:textAlignment="center"
                android:textColor="#000000"
                android:background="#ffffff"
                android:textStyle="normal"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="left|center"
                android:text=" ~ "
                android:textAlignment="center"
                android:textColor="#000000"
                android:background="#ffffff"
                android:textStyle="normal"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/endday"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="left|center"
                android:text="MM.DD 요일"
                android:textAlignment="center"
                android:textColor="#000000"
                android:background="#ffffff"
                android:textStyle="normal"
                android:textSize="15sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/selectperson"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="left|center"
            android:layout_marginLeft="20dp"
            android:text=" 인원 "
            android:textAlignment="center"
            android:background="#ffffff"
            android:textColor="#000000"
            android:textStyle="normal"
            android:textSize="15sp"/>

    </LinearLayout>

    <!--필터링-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/null_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="검색된 정보가 없습니다"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textColor="@color/black"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center|top"
            android:id="@+id/select_list"
            android:layout_margin="10dp"/>

    </LinearLayout>
</LinearLayout>